            padding      : 5px;

            span {
                a {
                    color    : #A69E9D;
                    font-size: 13px;
                }

                a:hover {
                    color: red;
                }
            }
        }

        .news_scroll {
            height       : 200px;
            overflow     : hidden;
            border-bottom: 1px solid #d1d1d1;

            #scroll_ct {
                li {
                    padding  : 6px;
                    font-size: 13px;

                    span {
                        font-weight: bold;
                    }
                }

                li:hover {
                    span {
                        color: blue;
                    }

                    a {
                        color: blue;
                    }
                }
            }
        }

        p {
            font-size: 13px;
            padding  : 5px;
        }

        img {
            width      : 200px;
            height     : 100px;
            margin-left: 10px;
        }
    }

    // 热门商品
    .hot {
        width   : 1300px;
        position: absolute;
        top     : 650px;
        left    : 120px;

        .hot_l {
            width           : 230px;
            height          : 240px;
            text-align      : center;
            background-color: #D8EEFC;

            img {
                margin-top: 15px;
                transition: all 1s;
            }

            img:hover {
                transform: scale(1.1);
            }

            .l_price {
                margin-top: 5px;

                span:first-of-type {
                    font-size       : 14px;
                    color           : white;
                    padding         : 2px 5px;
                    background-color: red;
                }

                span:last-of-type {
                    color      : red;
                    font-size  : 12px;
                    margin-left: 15px;
                }
            }
        }

        .hot_r {
            width   : 1050px;
            height  : 240px;
            overflow: hidden;
            position: relative;

            .hot_r_ul {
                width: 100%;

                li {
                    position: relative;
                    border  : 1px solid #d1d1d1;
                    float   : left;
                    width   : 262.5px;
                    height  : 240px;

                    .hot_word {
                        z-index   : 1;
                        position  : absolute;
                        top       : 10px;
                        left      : 10px;
                        width     : 50px;
                        height    : 50px;
                        background: url(../images/hot.png) no-repeat center;
                    }

                    .r_Img {
                        margin-top : 10px;
                        margin-left: 10px;

                        a {
                            img {
                                transition: all 1s;
                            }
                        }

                        a:hover {
                            img {
                                transform: scale(1.1);
                            }
                        }
                    }


                    .hot_name {
                        text-align: center;

                        a {
                            color    : #888888;
                            font-size: 13px;
                        }

                        h3 {
                            margin-bottom: 5px;
                            color        : #555555;
                            font-size    : 16px;
                        }
                    }

                    .hot_name:hover {
                        text-decoration: underline;
                    }

                    .r_price {
                        margin-top: 5px;
                        text-align: center;
                        font-size : 12px;
                        color     : #888888;

                        strong {
                            color    : red;
                            font-size: 16px;
                        }
                    }
                }
            }

            .op_btns {
                .op_btn {
                    position        : absolute;
                    top             : 50%;
                    transform       : translateY(-50%);
                    width           : 40px;
                    height          : 80px;
                    text-align      : center;
                    line-height     : 80px;
                    opacity         : 0.5;
                    display         : block;
                    background-color: #CCCCCC;
                    color           : white;
                }

                .op_prev {
                    left: 0;
                }

                .op_next {
                    right: 0;
                }
            }
        }
    }

